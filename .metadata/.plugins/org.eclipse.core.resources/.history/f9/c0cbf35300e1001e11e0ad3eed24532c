package edu.kh.jdbc1;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.Statement;
import java.util.Scanner;

public class JDBCExample5 {
	
	public static void main(String[] args) {
		
		//입사일을 입력("2000-01-01") 받아
		//입력 받은 값 보다 먼저 입사한 사람의
		//이름, 입사일, 성별(M,F) 조회
		
		Scanner sc = new Scanner(System.in);
		
		Connection conn = null;
		Statement stmt = null;
		ResultSet rs = null;
		
		try {
			
			System.out.print("입사일 입력 (YYYY-MM-DD) : ");
			String input = sc.next(); //2000-01-01
			
			Class.forName(Class.forName("oracle.jdbc.driver.OracleDriver");
			
			String type = "jdbc:oracle:thin:@"; // jdbc 드라이버 종류
			String ip = "localhost"; //db 서버 컴퓨터 ip
			String port = ":1521"; //포트번호
			String sid = ":XE"; //db 이름
			String user = "kh_cdy"; //사용자 계정
			String pw = "kh_cdy";)
			
			
			
			
			
			
			
			
		}catch(Exception e) {
			e.printStackTrace();
		}finally {
			try {
				if(rs != null) rs.close();
				if(conn != null) conn.close();
				if(stmt != null) stmt.close();
				
			}catch(Exception e) {
				e.printStackTrace();
			}
		}
		
		
		
		
	}

}
